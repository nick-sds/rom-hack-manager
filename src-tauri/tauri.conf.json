{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "ROM Hack Downloader",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA", "$APPDATA/settings.json"]
      },
      "http": {
        "request": true,
        "scope": ["https://dl.smwcentral.net/*"]
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "window": {
        "create": true,
        "show": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.zuccha.rom-hack-downloader",
      "resources": ["resources/*"],
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "ROM Hack Downloader",
        "width": 400,
        "height": 300,
        "url": "src/windows/main/Main.html"
      }
    ]
  }
}
